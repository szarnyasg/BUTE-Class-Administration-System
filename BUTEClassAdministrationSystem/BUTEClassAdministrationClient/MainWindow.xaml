<Window x:Class="BUTEClassAdministrationClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:BUTEClassAdministrationClient"
        Title="MainWindow" Height="350" Width="525">
    
    <Window.Resources>
        <!--<c:StudentModelView x:Key="studentModelView"/>
    -->
        </Window.Resources>
    
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="6"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="6"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Label
            Content="Félév:"
            Grid.Row="0"
            Grid.Column="0"
            Target="{Binding ElementName=semesterCmbBox}"
            />
   
        <c:ComboBoxWithCommand
            x:Name="semesterCmbBox"
            Grid.Row="0"
            Grid.Column="2"
            Width="100"
            HorizontalAlignment="Left"
            ItemsSource="{Binding MainWindowViewModel.SemesterPairs}"
            DisplayMemberPath="SemesterString"
            SelectedValuePath="SemesterObject"
            SelectedValue="{Binding MainWindowViewModel.SelectedSemester}"
            Command="{Binding MainWindowViewModel.ChangeSemesterCommand}">
        </c:ComboBoxWithCommand>

        <Label
            Content="Kurzus:"
            Grid.Row="0"
            Grid.Column="3"
            Target="{Binding ElementName=courseCmbBox}"
            />
        
        <c:ComboBoxWithCommand
            x:Name="courseCmbBox"
            Grid.Row="0"
            Grid.Column="5"
            HorizontalAlignment="Stretch"
            ItemsSource="{Binding MainWindowViewModel.CoursePairs}"
            DisplayMemberPath="CourseString"
            SelectedValuePath="CourseObject"
            SelectedValue="{Binding MainWindowViewModel.SelectedCourse}"
            >
        </c:ComboBoxWithCommand>

        <Button
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Content="Hallgató felvétele" 
            Click="InsertStudent_Click" />
        <Button
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Content="Importálás Excelből"
            Click="ImportFromExcel_Click"
            />
    </Grid>
</Window>
